@model EvaluationModel

@* Generated from Custom Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Evaluation Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin: 20px;
        }
        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .fw-bold {
            font-weight: bold;
        }
        .mb-3 {
            margin-bottom: 1rem !important;
        }
        hr {
            margin: 20px 0;
        }
        a {
            text-decoration: none;
            color: #007bff;
        }
        a:hover {
            text-decoration: underline;
            color: #0056b3;
        }
        .text-danger {
            color: #dc3545 !important;
        }
        .details-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .details-header h2 {
            font-size: 1.8rem;
            font-weight: 600;
            color: #007bff;
        }
        .details-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #e9ecef;
        }
        .details-row:last-child {
            border-bottom: none;
        }
        .btn {
            margin-top: 10px;
        }
    </style>
</head>
<body>
@if (Model is not null)
{
<div class="container">
    @if (TempData["Message"] is not null)
    {
    <p class="text-danger">
        @TempData["Message"]
    </p>
    }

    <div class="details-header">
        <h2>Evaluation Details</h2>
    </div>

    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.Title)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.Title)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.Score)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.Score)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.Date)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.Date)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.Description)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.User)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.User)
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2 fw-bold">
            @Html.DisplayNameFor(model => model.Evaluateds)
        </div>
        <div class="col-10">
            @Html.DisplayFor(model => model.EvaluatedIds)
        </div>
    </div>

    <hr />
    <a asp-action="Edit" asp-route-id="@Model.Record.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Record.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
}
</body>
</html>
